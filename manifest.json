{
  "manifest_version": 3,
  "name": "SecureGPT",
  "version": "1.0.0",
  "description": "Automatically detects and replaces sensitive information (PII, credit cards, API keys) with placeholders when using AI chat platforms like ChatGPT, Claude, Gemini, and more",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://chatgpt.com/*",
    "https://claude.ai/*",
    "https://gemini.google.com/*",
    "https://ai.meta.com/*",
    "https://mistral.ai/*",
    "https://x.ai/*",
    "https://cohere.com/*",
    "https://www.perplexity.ai/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*",
        "https://claude.ai/*",
        "https://gemini.google.com/*",
        "https://ai.meta.com/*",
        "https://mistral.ai/*",
        "https://x.ai/*",
        "https://cohere.com/*",
        "https://www.perplexity.ai/*"
      ],
      "js": ["content-simple.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "SecureGPT Settings",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
      "web_accessible_resources": [
        {
          "resources": ["icons/*.png", "config.html", "config.css", "config.js"],
          "matches": [
            "https://chat.openai.com/*",
            "https://chatgpt.com/*",
            "https://claude.ai/*",
            "https://gemini.google.com/*",
            "https://ai.meta.com/*",
            "https://mistral.ai/*",
            "https://x.ai/*",
            "https://cohere.com/*",
            "https://www.perplexity.ai/*"
          ]
        }
      ]
}
